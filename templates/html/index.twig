{% extends "html/layouts/default.twig" %}
{% block content %}

{% set today = 'now'|date('Y-m-d') %}
<section>
    <header>
        <h1>Today's Meetings</h1>
        <h2 class="weekday">{{ "now"|date("l, F j") }}</h2>
    </header>
{% if events[today] is defined %}
{% for event_id, event in events[today] %}
    <article> 
        <time datetime="{{ event.start | date('c') }}">
            <h2>{{ event.start | date('g:i a') | replace({'am':'a.m.', 'pm':'p.m.'}) }}</h2>
        </time>
        <header>
            <h2>{{ event.summary }}</h2>
        </header>
        {% if event.location is empty and 'ancel' not in event.summary %}
        <p class="location missing">To be announced</p>
        {% else %}
        <p class="location{% if event.location=='' %}{% endif %}">{{ event.location }}
            {% if event.zoomLink %}
            <a href="{{ event.zoomLink }}">Join Zoom</a>
            {% endif %}
        </p>
        {% endif %}
    </article>
{% endfor %}
{% else %}
    <p>No Meetings Today</p>
{% endif %}
</section>

{% if events|length > 1 %}
<section>
    <header>
        <h1>Upcoming Meetings</h1>
    </header>
    <div id="upcoming_meetings">
{% for date, ids in events %}
    {% if date != today %}
        <header>
            <h2>{{ date|date('l, F j') }}</h2>
        </header>
        {% for event_id, event in ids %}
        <article>
            <time datetime="{{ event.start | date('c') }}">
                <h2>{{ event.start | date('g:i a') | replace({'am':'a.m.', 'pm':'p.m.'}) }}</h2>
            </time>
            <header>
                <h2>{{ event.summary }}</h2>
            </header>
            {% if event.location is empty and 'ancel' not in event.summary %}
            <p class="location missing">To be announced</p>
            {% else %}
            <p class="location{% if event.location=='' %}{% endif %}">{{ event.location }}
                {% if event.zoomLink %}
                <a href="{{ event.zoomLink }}">Join Zoom</a>
                {% endif %}
            </p>
            {% endif %}
        </article>
        {% endfor %}
    {% endif %}
{% endfor %}
    </div>
</section>
{% endif %}

{% endblock %}
